@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<section class="dt-full-bleed dt-hero">
    <div class="dt-hero-inner container">
        <div class="dt-hero-content">
            <h1 class="dt-hero-title">Redefining Security for a Safer Future</h1>
            <p class="dt-hero-subtitle">Be proactive, use our Cyber Security Professionals and Physical Security Operators to empower your organization.</p>
            <a class="dt-btn-primary" href="#">Get Protected</a>
        </div>
        <div class="dt-hero-image">
            <img src="~/images/TransparentLogo.png" alt="Drago Tactical Target Logo" />
        </div>
    </div>
    <div class="dt-hero-overlay"></div>
    <div class="dt-hero-gradient"></div>
    <div class="dt-hero-bg"></div>
    
    
</section>

<!-- Stats Section -->
<section class="dt-full-bleed dt-stats">
    <div class="dt-stats-inner container">
        <h2 class="dt-stats-heading">Cybersecurity with DragoTactical</h2>
        <div class="dt-stats-grid">
            <div class="dt-stat-card">
                <div class="dt-stat-number">24/7</div>
                <div class="dt-stat-label">Threat Monitoring</div>
            </div>
            <div class="dt-stat-card">
                <div class="dt-stat-number">99.9%</div>
                <div class="dt-stat-label">Uptime Guarantee</div>
            </div>
            <div class="dt-stat-card">
                <div class="dt-stat-number">1,000 +</div>
                <div class="dt-stat-label">Vulnerabilities Prevented</div>
            </div>
        </div>
    </div>
    <div class="dt-stats-pattern"></div>
</section>
