@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<section class="dt-full-bleed dt-hero">
    <div class="dt-hero-inner container">
        <div class="dt-hero-content">
            <h1 class="dt-hero-title">Redefining Security for a Safer Future</h1>
            <p class="dt-hero-subtitle">Be proactive, use our Cyber Security Professionals and Physical Security Operators to empower your organization.</p>
            <a class="dt-btn-primary" href="#">Get Protected</a>
        </div>
        <div class="dt-hero-image">
            <img src="~/images/TransparentLogo.png" alt="Drago Tactical Target Logo" />
        </div>
    </div>
    <div class="dt-hero-overlay"></div>
    <div class="dt-hero-gradient"></div>
    <div class="dt-hero-bg"></div>
    
    
</section>

<!-- Stats Section -->
<section class="dt-full-bleed dt-stats">
    <div class="dt-stats-inner container">
        <h2 class="dt-stats-heading">Cybersecurity with DragoTactical</h2>
        <div class="dt-stats-grid">
            <div class="dt-stat-card">
                <div class="dt-stat-number">24/7</div>
                <div class="dt-stat-label">Threat Monitoring</div>
            </div>
            <div class="dt-stat-card">
                <div class="dt-stat-number">99.9%</div>
                <div class="dt-stat-label">Uptime Guarantee</div>
            </div>
            <div class="dt-stat-card">
                <div class="dt-stat-number">1,000 +</div>
                <div class="dt-stat-label">Vulnerabilities Prevented</div>
            </div>
        </div>
    </div>
    <div class="dt-stats-pattern"></div>
</section>

<!-- Mission Statement Section -->
<section class="dt-full-bleed dt-mission">
    <div class="dt-mission-inner container">
        <div class="dt-mission-left">
            <div class="dt-mission-icon">
                <img src="~/images/whiteweb.png" alt="Web" class="dt-mission-bg" />
                <img src="~/images/lock.png" alt="Lock" class="dt-mission-lock" />
            </div>
            <h2 class="dt-mission-title">Mission Statement</h2>
        </div>
        <div class="dt-mission-right">
            <p>
                At Drago, our aim is to bridge the gap between the digital and physical security needs.
                We provide comprehensive cybersecurity and physical security services to our clients,
                protecting against both cyber and physical threats.
            </p>
        </div>
    </div>
</section>

<!-- Services Section -->
<section class="dt-full-bleed dt-services">
    <div class="container">
        <h2 class="dt-services-heading">What do our Services include?</h2>

        <div class="dt-services-grid">
            <!-- Cybersecurity -->
            <div class="dt-service-card">
                <div class="dt-service-icon">
                    <img src="~/images/lock.png" alt="Cybersecurity Icon" />
                </div>
                <h3>Cybersecurity</h3>
                <p>
                    From risk assessments and penetration testing to cloud security and incident response,
                    we ensure that your IT infrastructure is resilient against cyberattacks.
                </p>
                <button class="dt-btn-book">Book</button>
            </div>

            <!-- Physical Security -->
            <div class="dt-service-card">
                <div class="dt-service-icon">
                    <img src="~/images/physical.png" alt="Physical Security Icon" />
                </div>
                <h3>Physical Security</h3>
                <p>
                    Our certified personnel both armed and unarmed provide on-site security, VIP protection,
                    surveillance systems, access control, and emergency response to protect your physical assets.
                </p>
                <button class="dt-btn-book">Book</button>
            </div>

            <!-- Risk Management -->
            <div class="dt-service-card">
                <div class="dt-service-icon">
                    <img src="~/images/risk.png" alt="Risk Management Icon" />
                </div>
                <h3>Risk Management</h3>
                <p>
                    We specialize in bridging the gap between digital and physical security, creating a holistic
                    protection framework through risk audits, consulting, and project management.
                </p>
                <button class="dt-btn-book">Book</button>
            </div>

            <!-- Consultancy -->
            <div class="dt-service-card">
                <div class="dt-service-icon">
                    <img src="~/images/consultancy.png" alt="Consultancy Icon" />
                </div>
                <h3>Consultancy</h3>
                <p>
                    With offerings like Virtual Cyber Assistants (VCA) and Virtual CISOs (Chief Information Security Officers),
                    we provide flexible, strategic guidance that fits your organization’s unique security needs.
                </p>
                <button class="dt-btn-book">Book</button>
            </div>
        </div>
    </div>
</section>
