@{
    ViewData["Title"] = "Contact Us";
}

<div class="dt-contact dt-full-bleed">
  <div class="dt-contact-top-gradient"></div>
  <div class="dt-contact-pattern-right"></div>
  <div class="dt-contact-content container-fluid">
    <div class="dt-contact-grid">
      <div class="dt-contact-heading">
        <h1 class="dt-contact-title">Contact Us</h1>
        <p class="dt-contact-subtitle">Let us reach out</p>
      </div>

      <form class="dt-contact-form" method="post" action="#" novalidate>
        <div class="row g-3">
          <div class="col-md-6">
            <input class="form-control dt-input" type="text" placeholder="First Name*" required />
          </div>
          <div class="col-md-6">
            <input class="form-control dt-input" type="text" placeholder="Last Name *" required />
          </div>
          <div class="col-md-6">
            <input class="form-control dt-input" type="email" placeholder="Email*" required />
          </div>
          <div class="col-md-6">
            <input class="form-control dt-input" type="tel" placeholder="Phone*" required />
          </div>
          <div class="col-12">
            <input class="form-control dt-input" type="text" placeholder="Company name (Optional)" />
          </div>
          <div class="col-12">
            <select class="form-select dt-input">
              <option selected>Location</option>
              <option>South Africa</option>
              <option>United Kingdom</option>
              <option>United States</option>
              <option>Europe</option>
              <option>Other</option>
            </select>
          </div>
          <div class="col-12">
            <select class="form-select dt-input">
              <option selected>Services of Interest</option>
              <option>Penetration Testing</option>
              <option>Incident Response</option>
              <option>Threat Hunting</option>
              <option>Red Teaming</option>
              <option>Physical Security</option>
              <option>Other</option>
            </select>
          </div>
          <div class="col-12">
            <textarea class="form-control dt-input" rows="4" placeholder="Message– Please provide a description of your enquiry"></textarea>
          </div>
        </div>

        <div class="mt-3 d-flex justify-content-end">
          <button type="submit" class="btn dt-btn-submit">Submit*</button>
        </div>
      </form>
    </div>
  </div>

  <div class="dt-contact-blob" aria-hidden="true">
    <img src="~/images/BlueBall.png" alt="" />
  </div>
</div>