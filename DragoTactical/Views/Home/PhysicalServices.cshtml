@{
    ViewData["Title"] = "Physical Services Page";
}
<!-- Hero Section -->

<header class="bg-physical-services text-white position-relative overflow-hidden">
    <div class="container px-4 text-center">
        <h1 class="page-title display-4 fw-bold lh-1 mb-5 mt-3">
            Physical Services
        </h1>

        <p class="lead fw-normal mb-5">
            Taking your Physical Security for Granted?
        </p>
    </div> 
</header>

<!-- Services Section -->
<section class="services-section py-5 position-relative overflow-hidden">
    <div class="container px-4 position-relative"> 
        <div row="row justify-content-center text-center mb-5">
            <div class="col-lg-8">
                <p class="fs-5 text-secondary mb-4">
                    Physical threat vectors (theft, malware, sabotage) focus on physical security
                    weaknesses. Once breached, they can compromise your business and affect
                    your sustainability. It’s a fatal flaw to underestimate your security measures!
                </p>
                <p class="fs-5 text-secondary">
                    Let our team of certified professionals, both armed and unarmed, help
                    you on your journey to safeguarding your most valuable assets.
                </p>
            </div>
        </div>

        <h2 class="card-title font-color text-center fw-bold mb-5">
            Our  Services
        </h2>

        <div class="card-container align-content-center">
            <!-- Card.Row 1 -->
            <div class="row g-4">

                <!-- Service Card 1 -->
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="card card-service p-4 rounded-3 shadow-sm border-0">
                        <div class="card-body">
                            <h5>Risk Analysis & Security Audits</h5>
                        </div>
                    </div>
                </div>

                <!-- Service Card 2 -->
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="card card-service p-4 rounded-3 shadow-sm border-0">
                        <div class="card-body">
                            <h5>On-Site Security Personnel / VIP Protection</h5>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card.Row 2 -->
            <div class="row g-4">

                <!-- Service Card 3 -->
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="card card-service p-4 rounded-3 shadow-sm border-0">
                        <div class="card-body">
                            <h5>Surveillance Systems</h5>
                        </div>
                    </div>
                </div>

                <!-- Service Card 4 -->
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="card card-service p-4 rounded-3 shadow-sm border-0">
                        <div class="card-body">
                            <h5>Access Control Solutions</h5>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card.Row 3 -->
            <div class="row g-4">

                <!-- Service Card 5 -->
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="card card-service p-4 rounded-3 shadow-sm border-0">
                        <div class="card-body">
                            <h5>Alarm and Emergency Response Systems</h5>
                        </div>
                    </div>
                </div>

                <!-- Service Card 6 -->
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="card card-service p-4 rounded-3 shadow-sm border-0">
                        <div class="card-body">
                            <h5>Project Management</h5>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card.Row 4 -->
            <div class="row g-4">

                <!-- Service Card 7 -->
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="card card-service p-4 rounded-3 shadow-sm border-0">
                        <div class="card-body">
                            <h5>Security Consulting</h5>
                        </div>
                    </div>
                </div>

                <!-- Service Card 8 -->
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="card card-service p-4 rounded-3 shadow-sm border-0">
                        <div class="card-body">
                            <h5>Vehicle & Perimeter Security</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <h2 class="form-title text-black text-center fw-bold mb-5">
            Contact Us
        </h2>

        <form class="dt-contact-form" method="post" action="#" novalidate>
            <div class="row g-3">
              <div class="col-md-6">
                <input class="form-control dt-input" type="text" placeholder="Name" required />
              </div>
              <div class="col-md-6">
                <input class="form-control dt-input" type="text" placeholder="Surname" required />
              </div>
              <div class="col-md-6">
                <input class="form-control dt-input" type="email" placeholder="Email" required />
              </div>
              <div class="col-md-6">
                <input class="form-control dt-input" type="tel" placeholder="Phone Number" required />
              </div>
              <div class="col-12">
                <select class="form-select dt-input">
                  <option selected>Services of Interest</option>
                  <option>Risk Analysis & Security Audits</option>
                  <option>On-Site Security Personnel/VIP Protection</option>
                  <option>Surveillance Systems</option>
                  <option>Access Control Solutions</option>
                  <option>Alarm and Emergency Respone Systems</option>
                  <option>Project Management</option>
                  <option>Security Consulting</option>
                  <option>Vehicle & Perimeter Security</option>
                </select>
              </div>
            </div>

            <div class="mt-3 d-flex justify-content-center">
              <button type="submit" class="btn dt-btn-submit">Submit</button>
            </div>
        </form>
    </div>
</section>