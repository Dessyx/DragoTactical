@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - DragoTactical</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Text:ital@0;1&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DragoTactical.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- NAV -->
    <header>
        <nav class="navbar navbar-expand-lg dt-navbar border-bottom mb-0">
            <div class="container-fluid d-flex align-items-center justify-content-between px-3">

                <!-- Left side: logo + nav links -->
                <div class="d-flex align-items-center">
                    <!-- Logo -->
                    <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/DragoLogo.png" alt="Drago Tactical" class="dt-navbar-logo" />
                    </a>

                    <!-- Nav links (collapse on small screens) -->
                    <div class="collapse navbar-collapse" id="dtNavbar">
                        <ul class="navbar-nav dt-navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="CyberServices">Cyber Security Services</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="PhysicalServices">Physical Services</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Right side: hamburger toggle + pattern -->
                <div class="d-flex align-items-center">
                    <!-- Hamburger toggle (mobile only) -->
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#dtNavbar"
                            aria-controls="dtNavbar" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <!-- Pattern (hide on mobile) -->
                    <div class="dt-navbar-pattern d-none d-lg-block">
                        <img src="~/images/BlackCircuitUp.png" alt="Pattern" />
                    </div>
                </div>
            </div>
        </nav>
    </header>


    <!-- MAIN (full width) -->
    <div class="container-fluid px-0">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    @RenderSection("Scripts", required: false)

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
